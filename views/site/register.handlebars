<div class="row row-cols-1 mb-3 pb-5">
          <div class="login-form">
        <form action="/users/register", method="POST">
          <h1>Kayıt Ol</h1>
          <div class="login">
            <div class="input-field">
                <input placeholder="İsim-Soyisim" name="username" type="text">
              </div>
            <div class="input-field">
              <input type="email" placeholder="Mail Adresi" name="email" type="email">
            </div>
            <div class="input-field">
              <input type="password" placeholder="Şifre" name="password" type="password">
            </div>
          </div>
          <div class="action">
            <button>Kayıt Ol</button>
          </div>
        </form>
      </div>
      </div>